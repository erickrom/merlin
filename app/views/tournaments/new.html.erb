<h2>Create a New Tournament!</h2>

<%= form_for(@tournament) do |f| %>
  <%= f.label :name, "Name" %>
  <%= f.text_field :name%>
  <div id="leagues">
    <% @leagues.each do |league| %>
      <%= f.radio_button :league, league.id %>
      <%= f.label :league, "#{league.name}" %>
    <% end %>
  </div>
  <%= f.submit "Create New Tournament!", class: "btn btn-large btn-primary" %>
<% end %>



