<div class="panel panel-default">
  <div class="panel-heading">
    <div class="row">
      <div class="col-md-4"><strong>Local</strong></div>
      <div class="col-md-2"><strong>Score</strong></div>
      <div class="col-md-4"><strong>Visitor</strong></div>
      <div class="col-md-2"></div>
    </div>
  </div>
  <ul class="list-group">
    <% @matches.each do |match| %>
      <li class="list-group-item">
        <div class="row">
          <div class="col-md-12">
            <div class="row">
              <div class="local col-md-4"><%= match.local %></div>
              <div class="score col-md-2"> <%= match.local_goals %> - <%= match.visitor_goals %></div>
              <div class="visitor col-md-4"><%= match.visitor %></div>
              <div class="col-md-2"><button type="button" class="btn btn-primary btn-sm">Modify Prediction</button></div>
            </div>
            <div class="row">
              <div class="col-md-10 col-md-offset-1">
                <table class="table table-striped">
                  <thead>
                  <tr>
                    <th>#</th>
                    <th>Player</th>
                    <th>Prediction</th>
                    <th>Points</th>
                  </tr>
                  </thead>
                  <tbody>
                  <tr>
                    <td>1</td>
                    <td>Mark</td>
                    <td>0-0</td>
                    <td>3</td>
                  </tr>
                  <tr>
                    <td>2</td>
                    <td>Jacob</td>
                    <td>1-2</td>
                    <td>0</td>
                  </tr>
                  <tr>
                    <td>3</td>
                    <td>Larry</td>
                    <td>3-0</td>
                    <td>5</td>
                  </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
